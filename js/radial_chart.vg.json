{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "A simple radial chart with embedded data.",
    "data": { "url": "https://raw.githubusercontent.com/rcra0006/homeworkweek9/refs/heads/main/data/speciesdata.csv"},
    "layer": [{
      "mark": {"type": "arc", "innerRadius": 20, "stroke": "#fff"}
    },{
      "mark": {"type": "text", "radiusOffset": 10},
      "encoding": {
        "text": {"field": "TaxonomicGroup", "type": "nominal"}
      }
    }],
    "encoding": {
      "theta": {"aggregate": "count", "field": "TaxonomicGroup", "type": "quantitative", "stack": true},
      "radius": {"aggregate": "count", "field": "TaxonomicGroup", "scale": {"type": "sqrt", "zero": true, "rangeMin": 80}},
      "color": {"field": "TaxonomicGroup", "type": "nominal", "legend": "yes", "scale": {"scheme": "greens"}}
    }
  }